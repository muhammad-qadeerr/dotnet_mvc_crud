@model List<MVC_in_Dotnet.Models.Student>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-hover  table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>RollNo</th>
            <th>CGPA</th>
            <th>Semester</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(MVC_in_Dotnet.Models.Student s in Model)
        {
            <tr>
                <td>@s.Name</td>
                <td>@s.RollNo</td>
                <td>@s.CGPA</td>
                <td>@s.Semester</td>
                <td>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@s.Id">Details</a>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Remove" asp-route-id="@s.Id">Remove</a>

                </td>
            </tr>
        }
    </tbody>
</table>
